# Citations: 
# Karger et al. (2017) Scientific Data, 4, 170122. https://doi.org/10.1038/sdata.2017.122
# Karger et al. (2018) EnviDat. https://doi.org/10.16904/envidat.228.v2.1 


library(tidyverse)
library(raster)

# setwd()

# Mask oceans, change layer names and save as TIFF -------------------------------------------

# path to directory containing the 19 raw CHELSA TIFF files
paths_ssp3 <- list.files(
  path="~/Documents/bioclim_var/CHELSA_v2.1/IPSL-CM6A-LR_2071-2100_ssp3/",
  full.names = TRUE)

rast_ssp3 <- raster::stack(paths_ssp3)
names(rast_ssp3) 

# change layer names
bio_ssp3 <- 
  names(rast_ssp3) %>% str_extract(regex("bio_?[0-9]+", ignore_case = TRUE)) %>% 
  str_extract("[0-9]+") %>% str_remove("^0") %>% str_c("bio",.)
bio_ssp3

ssp3_names <- str_c("glo_bioclim_chelsa2_future_pixel_2071_2100_ssp3_", bio_ssp3)
names(rast_ssp3) <- ssp3_names
names(rast_ssp3)

# load mask to remove ocean
msk <- raster("mask_ocean.tif")

# mask ocean in each layer
r <- raster::mask(rast_ssp3, msk)

# save each layer in separate tiff files
rst_u <- raster::unstack(r)
if (!dir.exists("ssp3_tif")) dir.create("ssp3_tif")
rds_p <- str_c("ssp3_tif/", ssp3_names, ".tif")
rst_out <- walk2(rst_u, rds_p, ~ writeRaster(.x, .y))


# Save each layer in individual RDS files -------------------------------------------

# path to directory containing the 19 masked CHELSA TIFF files

paths <- list.files(path="F:/nsdm_ApoderaVas/covariates/masked_tiff/ssp3_tif", 
                    full.names = TRUE)

ssp3_stack <- raster::stack(paths)

names(ssp3_stack)
# [1] "glo_bioclim_chelsa2_future_pixel_2071_2100_ssp3_bio1"  "glo_bioclim_chelsa2_future_pixel_2071_2100_ssp3_bio10"
